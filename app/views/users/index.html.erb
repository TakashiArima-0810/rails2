    <h3>投稿一覧</h3>
 
    <table>
      <thead>
        <tr>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>住所</th>
          <th>ルーム画像</th>
          <th>投稿者(User_id)</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.room_name %></td>
            <td><%= post.room_introduction %></td>
            <td><%= post.room_price %></td>
            <td><%= post.room_address %></td>
            <td><% if post.room_image? %>
            <%= image_tag post.room_image.url %>
            <% end %></td>
            <td><%= post.user_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
 
    <p><%= link_to "ルーム新規登録", :new_room %></p>