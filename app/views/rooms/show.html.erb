

    <h3>ルーム詳細</h3>
 
    <table>
      <tr>
        <th>ルーム名</th>
        <td><%= @room.room_name %></td>
      </tr>
      <tr>
        <th>ルーム紹介</th>
        <td><%= @room.room_introduction %></td>
      </tr>
      <tr>
        <th>ルーム料金</th>
        <td><%= @room.room_price %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @room.room_address %></td>
      </tr>
      <tr>
        <th>ルーム画像</th>
        <td><% if @room.room_image? %>
            <%= image_tag @room.room_image.url %>
            <% end %></td>
      </tr>
    </table>
    
    
    <h3>予約登録</h3>
 
    <%= form_for @reservation do |f| %>
    
      <table>
        <tr>
          <th><%= f.label :start_date ,"予約開始日" %></th>
          <td><%= f.date_field :start_date %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_date ,"予約終了日" %></th>
          <td><%= f.date_field :end_date %></td>
        </tr>
 
        <tr>
          <th><%= f.label :number_of_people ,"人数" %></th>
          <td><%= f.number_field :number_of_people %></td>
        </tr>
        
        <tr>
          <th><%= f.label :total_price ,"1泊あたりの金額(数値のみ入力)" %></th>
          <td><%= f.text_field :total_price %></td>
        </tr>
 
      </table>
      
      <%= f.hidden_field :room_id, value: @room.id %>
      
      <div>
        <ul>
          <li><%= f.submit "予約する" %></li>
          <li><%= link_to "予約情報一覧に戻る", :reservations %></li>
        </ul>
      </div>
      
    <% end %>
 
    <div>
      <ul>
        <li><%= link_to "ルーム一覧に戻る", :rooms %></li>
      </ul>
    </div>

